<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple"></constant>

	<package name="basicstruts2" extends="json-default">
		
		<!-- 注册拦截器 -->
		<interceptors>
				<interceptor name="login" class="cn.tf.bos.web.interceptor.LoginInterceptor"></interceptor>
				<interceptor-stack name="loginStack">
						<interceptor-ref name="defaultStack"></interceptor-ref>
						<interceptor-ref name="login"></interceptor-ref>
				</interceptor-stack>
		</interceptors>
		<!-- 设置默认拦截器栈 -->
		<default-interceptor-ref name="loginStack"></default-interceptor-ref>
		
		<global-results>
			<result name="login">/login.jsp</result>
		</global-results>
		
		
		
		<action name="index">
			<result>/index.jsp</result>
		</action>
		<!-- 需要进行权限控制的页面访问 -->
		<action name="page_*_*">
			<result>/WEB-INF/pages/{1}/{2}.jsp</result>
		</action>
		
		<action name="user_*"  class="userAction" method="{1}">
			<result name="editpassword"  type="json">
					<param name="root">map</param>
			</result>
		</action>
		
		
		<action   name="standard_*"  class="standardAction"  method="{1}"  >
				<result name="save">/WEB-INF/pages/base/standard.jsp</result>
				<result name="findByPage"   type="json">
					<param name="root">pageResponseBean</param>
					<param name="includeProperties">
					<!-- 正则表达式 格式  -->
					total, <!-- pageResponseBean的 total 属性返回  -->
					rows\[\d+\]\.id,
					rows\[\d+\]\.name,
					rows\[\d+\]\.minweight,
					rows\[\d+\]\.maxweight,
					rows\[\d+\]\.updatetime,
					rows\[\d+\]\.user\.username,
					rows\[\d+\]\.user\.station
				</param>
				</result>
				<result name="delete">/WEB-INF/pages/base/standard.jsp</result>
				
				<result  name="ajaxlist"  type="json">
					<param name="root">standardlist</param>
					<param name="includeProperties">
						\[\d+\]\.id,
						\[\d+\]\.name
					</param>
				</result>
		</action>
		
		<!-- 取派员配置 -->
		<action  name="staff_*"  class="staffAction"  method="{1}">
				<result name="saveOrUpdate">/WEB-INF/pages/base/staff.jsp</result>
				<result  name="findByPage"  type="json">
					<param name="root">pageResponseBean</param>
					<param name="includeProperties">
					<!-- 正则表达式 格式  -->
					total,
					rows\[\d+\]\.id,
					rows\[\d+\]\.name,
					rows\[\d+\]\.telephone,
					rows\[\d+\]\.station,
					rows\[\d+\]\.haspda,
					rows\[\d+\]\.deltag,
					rows\[\d+\]\.standard\.id,
					rows\[\d+\]\.standard\.name
				</param>
				</result>
				<result name="delete">/WEB-INF/pages/base/staff.jsp</result>	
		</action>
		
		<!-- 区域设置 -->
		<action name="region_*"  class="regionAction"  method="{1}">
			<result  name="OCimport" type="json">
				<param name="root">map</param>
			</result>
			<result name="findByPage"  type="json">
				<param name="root">pageResponseBean</param>
			</result>
			<result name="ajaxlist" type="json">
				<param name="root">regions</param>
				<param name="includeProperties">
					\[\d+\]\.id,
					\[\d+\]\.info
				</param>
			</result>
		</action>
		
			<!-- 分区设置 -->
	<action  name="subarea_*"  class="subareaAction"  method="{1}">
		<result name="saveOrUpdate">/WEB-INF/pages/base/subarea.jsp</result>
		<result  name="findByPage"  type="json">
					<param name="root">pageResponseBean</param>
					<param name="includeProperties">
					<!-- 正则表达式 格式  -->
					total,
					rows\[\d+\]\.id,
					rows\[\d+\]\.addresskey,
					rows\[\d+\]\.startnum,
					rows\[\d+\]\.endnum,
					rows\[\d+\]\.single,
					rows\[\d+\]\.position,
					rows\[\d+\]\.region\.province,
					rows\[\d+\]\.region\.city,
					rows\[\d+\]\.region\.district
				</param>
				</result>
				<result name="exportFile"  type="stream">
					<param name="contentType">application/vnd.ms-excel</param>
					<param name="contentDisposition">attachment;filename=${downloadFileName}</param>
				</result>
	
	</action>
	
	
	
	</package>
	

	
	<package name="nologin"  extends="struts-default">
			<!-- 登录功能 -->
		<action name="login" class="loginAction">
			<result name="input">/login.jsp</result>
			<result type="redirect">/index.jsp</result>
		</action>
	</package>
	

</struts>